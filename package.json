{
  "name": "@diamondslab/diamonds-hardhat-foundry",
  "version": "2.3.0",
  "description": "Hardhat plugin that integrates Foundry testing with Diamond proxy contracts, providing deployment helpers and fuzzing support",
  "repository": {
    "type": "git",
    "url": "https://github.com/diamondslab/diamonds-hardhat-foundry",
    "directory": "packages/diamonds-hardhat-foundry"
  },
  "homepage": "https://github.com/diamondslab/diamonds-hardhat-foundry",
  "author": "Am0rfu5",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "foundry",
    "forge",
    "diamondslab",
    "diamonds",
    "diamond",
    "solidity",
    "erc-2535",
    "fuzzing",
    "testing",
    "diamond-proxy"
  ],
  "scripts": {
    "lint": "yarn prettier --check && yarn eslint",
    "lint:fix": "yarn prettier --write && yarn eslint --fix",
    "eslint": "eslint 'src/**/*.ts'",
    "prettier": "prettier \"**/*.{js,md,json}\"",
    "pretest": "cd ../.. && yarn build",
    "test": "mocha --recursive \"test/**/*.ts\" --exit",
    "build": "tsc --build . && yarn copy-templates",
    "copy-templates": "mkdir -p dist/templates && cp src/templates/*.template dist/templates/",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist"
  },
  "files": [
    "dist/",
    "src/",
    "contracts/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/debug": "^4.1.12",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "chai": "^4.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-mocha": "10.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "hardhat": "^2.26.0",
    "mocha": "^10.0.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.0",
    "typescript": "~5.0.0"
  },
  "peerDependencies": {
    "@diamondslab/diamonds": "workspace:^",
    "@diamondslab/hardhat-diamonds": "workspace:^",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "ethers": "^6.0.0",
    "hardhat": "^2.26.0"
  },
  "dependencies": {
    "picocolors": "^1.1.0"
  },
  "packageManager": "yarn@4.10.3"
}
